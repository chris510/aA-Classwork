<%if type == :new%>
  <% action_url = cats_url%>
  <% button_text = "Create Kitty"%>
<%elsif type == :edit%>
  <% action_url = cat_url(cat)%>
  <% button_text = "Update Cat"%>
<%end%>

<form action="<%= action_url %>" method="post">
  <% if type == :edit %>
    <input type="hidden" name="_method" value="patch" />
  <% end %>
<label for="name">Name:
  <input id="name" type="text" name="cat[name]" value = "<%= cat.name %>">
</label>
<br>
<label for="birth_date">Birthday:
  <input id="birth_date" type="date" name="cat[birth_date]" value = "<%= cat.birth_date %>">
</label>
<br>
<textarea name="cat[description]" id="" cols="30" rows="10" >
<%= cat.description %>
</textarea>
<br>
<select name="cat[color]">

  <option disable selected>--Please Select--</option>
  <option value="blue" <%= cat.color == "blue" ? "selected" : "" %>>blue</option>
  <option value="orange"<%= cat.color == "orange" ? "selected" : "" %>>orange</option>
  <option value="green" <%= cat.color == "green" ? "selected" : "" %>>green</option>
  <option value="red" <%= cat.color == "red" ? "selected" : "" %>>red</option> 
</select>
<br>

<select name="cat[sex]">
<input type="radio" name="cat[sex]" value="M"<%= cat.sex == "M" ? "checked" : "" %>> Male
<input type="radio" name="cat[sex]" value="F" <%= cat.sex == "F" ? "checked" : "" %> > Female<br>
</select>
<br>
<input type="submit" value="<%= button_text %>" >
</form>